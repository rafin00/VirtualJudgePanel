@model VJP_Entity.User

@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="container form-horizontal">
        <div class="row">

            <div class="col-md-3 ">
                <div class="list-group ">
                    <a href="/Student/Edit/@Session["id"]" class="list-group-item list-group-item-action">Profile</a>
                    <a href="/Student/Account/@Session["id"]" class="list-group-item list-group-item-action active">Account</a>
                    <a href="/Student/Account/@Session["id"]" class="list-group-item list-group-item-action">Education Details</a>
                    <a href="/Student/Account/@Session["id"]" class="list-group-item list-group-item-action">Experience Details</a>
                </div>
            </div>

            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-md-12">
                                <h4>Change Your Password</h4>
                                <p>Enter your current password along with a new one to change it.</p>
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <form>
                                    <div class="form-group row">
                                        @Html.Label("Current Password", htmlAttributes: new { @class = "col-4 col-form-label" })
                                        <div class="col-4">
                                            @Html.Editor("CurrentPassword", new { htmlAttributes = new { @class = "form-control here", @type = "password" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        @Html.Label("New Password", htmlAttributes: new { @class = "col-4 col-form-label" })
                                        <div class="col-4">
                                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control here" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        @Html.Label("Confirm Password", htmlAttributes: new { @class = "col-4 col-form-label" })
                                        <div class="col-4">
                                            @Html.Editor("ConfirmPassword", new { htmlAttributes = new { @class = "form-control here", @type = "password" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="offset-4 col-8">
                                            <button name="submit" type="submit" class="btn btn-outline-primary">Update My Password</button>
                                            <br /> <br />
                                            <p style="color: limegreen">@TempData["PasswordEdited"]</p>
                                            <p style="color: red">@TempData["CurrentPassword"]</p>
                                            <p style="color: red">@TempData["ConfirmPassword"]</p>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

