@model VJP_Entity.Student

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

<div class="container">
    <div class="">
        <h3 class="page-label">On Going Events</h3>
        <hr class="shadow" />
    </div>
</div>

<div class="container" style="max-width: 1400px; float: none; display:flex; flex-wrap: wrap">
    @foreach (var item in ViewBag.Event)
    {
        if (item.ClosingDate >= DateTime.Now)
        {
            <div class="col-md-4" style="max-width: 450px; max-height: 400px; height: 450px; width: 450px;">
                <div class="card shadow p-3 mb-5 bg-white rounded" style="">
                    @*<img class="card-img-top" src=@item.Imageath width="128" height="128">*@
                    <div class="card-body">
                        <h4 class="card-title">@item.EventTitle</h4> <hr />
                        <p class="card-text">@item.Description</p>
                        <div style="display:flex; justify-content:space-between">
                            <a href="/Student/Event/@item.Id" class="btn btn-info shadow rounded">Details</a>
                            <a href="/Student/Event/@item.Id" class="btn btn-success shadow rounded">Sign Up</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
